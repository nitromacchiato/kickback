generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:baseball1@localhost:3306/kickback"
}

model Account {
  id                    Int       @id @default(autoincrement())
  compoundId            String    @unique @map("compound_id")
  userId                Int       @map("user_id")
  providerType          String    @map("provider_type")
  providerId            String    @map("provider_id")
  providerAccountId     String    @map("provider_account_id")
  refreshToken          String?   @map("refresh_token")
  accessToken           String?   @map("access_token")
  accessTokenExpires    DateTime? @map("access_token_expires")
  createdAt             DateTime  @default(now()) @map("created_at")
  updatedAt             DateTime  @default(now()) @map("updated_at")
  refresh_token_expires DateTime  @default(now())
  refresh_token_updated DateTime?

  @@index([providerAccountId], name: "providerAccountId")
  @@index([providerId], name: "providerId")
  @@index([userId], name: "userId")
  @@map("accounts")
}

model Session {
  id           Int      @id @default(autoincrement())
  userId       Int      @map("user_id")
  expires      DateTime
  sessionToken String   @unique @map("session_token")
  accessToken  String?  @unique @map("access_token")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @default(now()) @map("updated_at")

  @@map("sessions")
}

model User {
  id                  Int       @id @default(autoincrement())
  name                String?
  email               String?   @unique
  emailVerified       DateTime? @map("email_verified")
  image               String?
  createdAt           DateTime  @default(now()) @map("created_at")
  updatedAt           DateTime  @default(now()) @map("updated_at")
  school              String?
  schoolEmail         String?   @unique
  /// The value of this field is generated by the database as: `b'0'`.
  schoolEmailVerified String?

  @@map("users")
}

model VerificationRequest {
  id         Int      @id @default(autoincrement())
  identifier String
  token      String   @unique
  expires    DateTime
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @default(now()) @map("updated_at")

  @@map("verification_requests")
}

model schools {
  school_id Int     @id @default(autoincrement())
  name      String  @unique
  email     String  @unique
  alt_email String?
  nickname  String?
  region    String?
}

model schoolemailverification {
  id                  Int      @id @default(autoincrement())
  user_name           String
  school_email        String
  random_school_index String   @unique
  created_at          DateTime @default(now())
}

model playlists {
  id              Int       @id @default(autoincrement())
  name            String
  owner           String
  school          String
  region          String
  playlist_id     String
  external_href   String?
  cover_image     String?
  followers       Int?      @default(0)
  follower_change Int?      @default(0)
  uploadDate      DateTime? @default(now())
  updateDate      DateTime?
  description     String?
}
